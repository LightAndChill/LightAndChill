<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.TwoFragment">

    <LinearLayout
        android:id="@+id/lnMusic"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lnMusicTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imMusic"
                android:src="@drawable/musique"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="@string/musique"
                android:layout_toRightOf="@id/imMusic"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swMusic"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RadioGroup
            android:id="@+id/rgMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calme"
                android:id="@+id/rbMusicChill" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/partyHard"
                android:id="@+id/rbMusicParty"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnWeather"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_below="@id/lnMusic">

        <RelativeLayout
            android:id="@+id/lnWeatherTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/soleil"
                android:id="@+id/imWeather"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="@string/meteo"
                android:layout_toRightOf="@id/imWeather"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swWeather"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnScenar"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_below="@id/lnWeather">

        <RelativeLayout
            android:id="@+id/lnScenarTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/scenario"
                android:id="@+id/imScenar"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="@string/scenar"
                android:layout_toRightOf="@id/imScenar"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swScenar"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
